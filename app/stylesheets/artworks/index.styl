// 
// Styles for the artwork lists
//

@import '../base'

#container
  border 1px solid black
  padding 5px

  button
    display block

  #loading 
    font-size: 56px;
    font-weight: bold;
    width: 1200px;
    height: 700px;
    text-align: center;
    line-height: 500px

  #items_container
    margin-top 10px

  #picker
    text-align center
    padding 20px 20px 10px 20px
    font-size 18px
    text-transform uppercase

  #wrong_guess
    text-align: center;
    margin-bottom: 25px;
    color: red;
    display none

  #guess_again
    text-align: center;
    text-decoration: underline;
    cursor: pointer;
    display none


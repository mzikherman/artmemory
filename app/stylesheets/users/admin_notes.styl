// 
// Styles for the adminNotes module found inside user pages
// 

@import '../base'

#users .admin_notes
  .admin_note
    width 280px
    height 130px
    margin-right 20px
    float left
    position relative
    &:hover
      .delete
        opacity 0.3
    textarea.body
      height 5em
      overflow hidden
      margin-top 1em
      border none
    .detail
      font-size 11px
      color light-color
    .delete
      position absolute
      top 0
      right 0
      height 20px
      width 20px
      background-repeat no-repeat
      background-position top right
      box-sizing border-box
      opacity 0
      transition opacity fast-duration
      cursor pointer
      &:hover
      .delete
        opacity 1
  .add_admin_note
    width 280px
    float left
    box-sizing border-box
    textarea.body
      height 4em
      width 100%
      margin 0
    button
      margin 0
      margin-top 3px
      padding 7px
      font-size 11px
      width 100%
.button_error
  background #EFACB2
//
// Styles for the users frame.
// 

@import '../base'

#frames #users

  .export
    float right
    color #AAA
    font-style italic
    margin-bottom 9px
  
  // Table headers
  tr.main_row > th
    a
      width 100%
      height 100%
      display block
      padding 10px 10px 8px 10px
      &:hover 
        text-decoration none
    &.sortable
      background-position right center
      padding 0px

  header
    margin-bottom 13px
      
  header > h1
    width 400px
  
  // Table rows
  td.role
    text-transform capitalize

  td.name em
    color: #FF0000

  .total_counts
    font-size 12px